<div class="container">
    <h2>Isku Beddel Lacagta</h2>
    <input type="number" id="amount" placeholder="Tusaale: 50000">
    <select id="exchange">
        <option value="edahab-zaad">E-dahab → Zaad</option>
        <option value="zaad-edahab">Zaad → E-dahab</option>
    </select>
    <button onclick="calculate()">Bedel</button>

    <div id="result"></div>

    <h3>Shirkadaha</h3>
    <p><img src="telesom-logo.png" class="logo"> Telesom - Host</p>
    <p><img src="somtel-logo.png" class="logo"> Somtel - Sender</p>
</div>

<script>
function calculate(){
    let amount = Number(document.getElementById("amount").value);
    let exchange = document.getElementById("exchange").value;
    let fee = 0.015; // 1.5%
    let resultDiv = document.getElementById("result");
    let converted = 0;
    let edahabNumber = "657000992";
    let zaadNumber = "638867832";
    let wakiil = "Khaalid Ahmed";

    if(exchange === "edahab-zaad"){
        converted = amount + (amount*fee);
        resultDiv.innerHTML = `<div class="result-card">
            <p>Host: Telesom (${edahabNumber})</p>
            <p>Sender: Somtel (${zaadNumber})</p>
            <p>Wakiil: ${wakiil}</p>
            <p>Amount galinaya: ${amount}</p>
            <p>Amount la helayo: ${converted.toFixed(0)}</p>
            <button onclick="window.open('https://wa.me/${edahabNumber}?text=Waxaan rabaa exchange')">WhatsApp Somali</button>
        </div>`;
    } else {
        converted = amount + (amount*fee);
        resultDiv.innerHTML = `<div class="result-card">
            <p>Host: Somtel (${zaadNumber})</p>
            <p>Sender: Telesom (${edahabNumber})</p>
            <p>Wakiil: ${wakiil}</p>
            <p>Amount galinaya: ${amount}</p>
            <p>Amount la helayo: ${converted.toFixed(0)}</p>
            <button onclick="window.open('https://wa.me/${zaadNumber}?text=Waxaan rabaa exchange')">WhatsApp Somali</button>
        </div>`;
    }
}
</script>
